@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#file').on('change', function () {
                $('#pr').attr('src', window.URL.createObjectURL(this.files[0]));
            });
        });
    </script>
}


