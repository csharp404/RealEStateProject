                </div>
            </div>
        </section>
        <!-- Breadcrumb section .\ -->
        <!-- Account Page section -->
        <section class="account__page--section section--padding">
            <div class="container">
                <div class="account__section--inner">
                    <div class="account__tab--btn">
                        <ul class="account__tab--btn__wrapper d-flex justify-content-center">
                            <li class="account__tab--btn__items"><span class="account__tab--btn__field active">Sign Up</span></li>
                            <li class="account__tab--btn__items"><a class="account__tab--btn__field" asp-action="Login" asp-controller="Account">Login</a></li>
                        </ul>
                    </div>
                    <div class="account__form--wrapper">
                        <div class="account__header text-center mb-30">
                            <h2 class="account__title">Sign Up Today!</h2>
                            <p class="account__desc">
                                Hey! Enter your details to make an account
                                & become our partner
                            </p>
                        </div>
                        <div class="account__form">
                            <form asp-action="Register" asp-controller="Account">
                                <div class="account__form--input mb-30">
                                    <label class="account__form--input__label mb-12" asp-for="FirstName"></label>
                                    <input class="account__form--input__field" asp-for="FirstName" id="name" placeholder="Enter your name*" type="text">
                                </div>
                                <div class="account__form--input mb-30">
                                    <label class="account__form--input__label mb-12" asp-for="LastName"></label>
                                    <input class="account__form--input__field" asp-for="LastName" id="name" placeholder="Enter your name*" type="text">
                                </div>
                                <div class="account__form--input mb-30">
                                    <label class="account__form--input__label mb-12" asp-for="Email"></label>
                                    <input class="account__form--input__field" asp-for="Email" id="email" placeholder="Enter Email Adress" type="email">
                                </div>
                                <div class="account__form--input mb-30">
                                    <label class="account__form--input__label mb-12" asp-for="Password"></label>
                                    <input class="account__form--input__field" asp-for="Password"  placeholder="Password" type="password">
                                </div>
                                <div class="account__form--input mb-30">
                                    <label class="account__form--input__label mb-12" asp-for="ConfirmPassword"></label>
                                    <input class="account__form--input__field" asp-for="ConfirmPassword" placeholder="Confirm password" type="password">
                                </div>
                                <div class="account__form--input mb-30">
                                    <label class="account__form--input__label mb-12" asp-for="PhoneNumber"></label>
                                    <input class="account__form--input__field" asp-for="PhoneNumber"  type="text">
                                </div>
                                
                                
                                <button class="account__form--btn solid__btn">Create An Account</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    </body>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
