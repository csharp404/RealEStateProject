            </div>
        </div>
    </section>
    <!-- Breadcrumb section .\ -->
    <!-- Account Page section -->
    <section class="account__page--section section--padding">
        <div class="container">
            <div class="account__section--inner">
                <div class="account__tab--btn">
                    <ul class="account__tab--btn__wrapper d-flex justify-content-center">
                        <li class="account__tab--btn__items"><a class="account__tab--btn__field" asp-action="Register"  asp-controller="Account">Sign Up</a></li>
                        <li class="account__tab--btn__items"><span class="account__tab--btn__field active">Login</span></li>
                    </ul>
                </div>
                <div class="account__form--wrapper">
                    <div class="account__header text-center mb-30">
                        <h2 class="account__title">Login Here Today!</h2>
                        <p class="account__desc">
                            Hey! Enter your details to make an account
                            & become our partner
                        </p>
                    </div>
                    <div class="account__form">
                        <form asp-action="Login" asp-controller="Account">
                            <div class="account__form--input mb-30">
                                <label class="account__form--input__label mb-12" asp-for="Email"></label>
                                    <input class="account__form--input__field" asp-for="Email" id="email" placeholder="Enter email address" type="email">
                            </div>
                            <div class="account__form--input mb-30">
                                <div class="account__form--input__top mb-12 d-flex align-items-center justify-content-between">
                                    <label class="account__form--input__label" asp-for="Password">Password</label>
                                    
                                </div>
                                    <input class="account__form--input__field" placeholder="Enter Password" asp-for="Password" type="password">
                            </div>
                                <div class="form-group mb-3">
                                    <div class="form-check">
                                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                                        <label asp-for="RememberMe" class="form-check-label"></label>
                                    </div>
                                </div>
                                <a class="account__form--forgot__password" href="#">Forgot Password?</a>
                           
                            <button class="account__form--btn solid__btn">Login Here</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

</body>