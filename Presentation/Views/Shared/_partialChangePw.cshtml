@model CheckPwVM

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQnMftG4GylkOxB6GYsAXAHGtvA1i0imfxAuRUbvkeLRn5FFBbq5x4nZd" crossorigin="anonymous">

<!-- Custom CSS -->
<style>
    /* Custom styles for the modal */
    #Pw .modal-content {
        background-color: #f8f9fa; /* Optional: Light background */
        color: black; /* Set text color to black */
        border-radius: 0.5rem; /* Optional: Rounded corners */
    }

    #Pw .modal-header {
        border-bottom: 1px solid #dee2e6; /* Optional: Border line */
    }

    #Pw .modal-title {
        color: black; /* Ensure modal title is black */
    }

    #Pw .modal-body p {
        color: black; /* Ensure paragraphs are black */
    }

    #Pw .form-control {
        border-radius: 0.25rem; /* Optional: Rounded input fields */
    }

    #Pw .btn-primary {
        background-color: #007bff; /* Optional: Primary button color */
        border-color: #007bff; /* Match border color */
    }

    #Pw .btn-secondary {
        background-color: #6c757d; /* Optional: Secondary button color */
        border-color: #6c757d; /* Match border color */
    }

    /* Optional: Add more custom styles as needed */
</style>

<div class="form-group">
    <a class="edit__profile--update__btn solid__btn color1" data-bs-toggle="modal" data-bs-target="#Pw">Change Password</a>
</div>

<div class="modal fade" id="Pw" tabindex="-1" aria-labelledby="PwLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="PwLabel">Change Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>To change your password</p>
                <p>Enter Your Current and New Password</p>
                <form asp-action="ChangePassword" asp-controller="Account">
                    <div class="mb-3">
                        <input type="password" autocomplete="new-password" class="form-control" required placeholder="Current Password" asp-for="CurrentPassword" />
                    </div>
                    <div class="mb-3">
                        <input type="password" autocomplete="new-password" class="form-control" required placeholder="New Password" asp-for="NewPassword" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Change Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
