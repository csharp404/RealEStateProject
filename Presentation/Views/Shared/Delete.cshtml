@model ManageProfileVM

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQnMftG4GylkOxB6GYsAXAHGtvA1i0imfxAuRUbvkeLRn5FFBbq5x4nZd" crossorigin="anonymous">

<!-- Custom CSS -->
<style>
    /* Custom styles for the modal */
    #M .modal-content {
        background-color: #f8f9fa; /* Optional: Light background */
        color: black; /* Set text color to black */
        border-radius: 0.5rem; /* Optional: Rounded corners */
    }

    #M .modal-header {
        border-bottom: 1px solid #dee2e6; /* Optional: Border line */
    }

    #M .modal-title {
        color: black; /* Ensure modal title is black */
    }

    #M .modal-body p {
        color: black; /* Ensure paragraphs are black */
    }

    #M .form-control {
        border-radius: 0.25rem; /* Optional: Rounded input fields */
    }

    #M .btn-primary {
        background-color: #007bff; /* Optional: Primary button color */
        border-color: #007bff; /* Match border color */
    }

    #M .btn-secondary {
        background-color: #6c757d; /* Optional: Secondary button color */
        border-color: #6c757d; /* Match border color */
    }

    /* Optional: Add more custom styles as needed */
</style>

<div class="form-group">
    <a class="edit__profile--update__btn solid__btn color-accent-2" data-bs-toggle="modal" data-bs-target="#M">Disable your account</a>
</div>

<div class="modal fade" id="M" tabindex="-1" aria-labelledby="MLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="MLabel">Making sure you are not drunk</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete your account?</p>
                <p>If you are pretty sure, enter your password to proceed:</p>
                <form asp-action="DeleteAccount" asp-controller="Account">
                    <div class="mb-3">
                        <input type="password" autocomplete="off" class="form-control" required placeholder="Enter password" asp-for="Password" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Delete Account</button>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
